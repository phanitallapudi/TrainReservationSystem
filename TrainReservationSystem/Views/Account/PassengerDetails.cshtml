@model List<PassengerDetails>

@{
    ViewData["Title"] = "Passenger Details";
}

<h1>Passenger Details</h1>

<div class="container">
    <h1 class="text-center mb-5">Passenger Details</h1>

    <form asp-controller="Account" asp-action="PassengerDetails" method="post">
        <input type="hidden" name="PNR" value="@ViewBag.PNR" />

        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="card mb-4">
                <h3 class="card-header">Passenger @(i + 1)</h3>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="@Model[i].Name">Name:</label>
                        <div class="col-sm-10">
                            <input asp-for="@Model[i].Name" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="@Model[i].Age">Age:</label>
                        <div class="col-sm-10">
                            <input asp-for="@Model[i].Age" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="@Model[i].Gender">Gender:</label>
                        <div class="col-sm-10">
                            <select asp-for="@Model[i].Gender" class="form-control">
                                <option value="">Select Gender</option>
                                <option value="M">Male</option>
                                <option value="F">Female</option>
                                <option value="O">Other</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Pay</button>
        </div>
    </form>

</div>
