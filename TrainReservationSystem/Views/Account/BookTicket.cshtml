@model TrainReservationSystem.Models.BookingHistory

@{
    ViewData["Title"] = "BookTicket";
}

<h1>BookTicket</h1>

<h4>BookingHistory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BookTicket">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PNR" class="control-label"></label>
                <input asp-for="PNR" class="form-control" />
                <span asp-validation-for="PNR" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingDate" class="control-label"></label>
                <input asp-for="BookingDate" class="form-control" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ticketCount" class="control-label"></label>
                <input asp-for="ticketCount" class="form-control" />
                <span asp-validation-for="ticketCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainId" class="control-label"></label>
                <select asp-for="TrainId" class ="form-control" asp-items="ViewBag.TrainId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


