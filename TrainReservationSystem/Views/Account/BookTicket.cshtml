@model TrainReservationSystem.Models.BookingHistory

@{
    ViewData["Title"] = "Book Ticket";
}

<div class="container">
    <h1 class="mt-5">Book Ticket</h1>

    <div class="row justify-content-center mt-5">
        <div class="col-lg-6">
            <form asp-action="BookTicket" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="ticketCount" class="control-label">Number of Tickets:</label>
                    <input asp-for="ticketCount" class="form-control" />
                    <span asp-validation-for="ticketCount" class="text-danger"></span>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Book Now</button>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
