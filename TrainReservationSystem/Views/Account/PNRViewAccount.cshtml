@model PNR_ClassMembers

<!DOCTYPE html>
<html>
<head>
	<title>PNR Status - IRCTC</title>
	<style type="text/css">
		body {
			background-color: #f2f2f2;
			font-family: Arial, sans-serif;
			font-size: 14px;
			line-height: 1.4;
			margin: 0;
			padding: 0;
		}

		.container {
			background-color: #fff;
			border: 1px solid #e6e6e6;
			margin: 50px auto;
			max-width: 800px;
			padding: 30px;
		}

		h1 {
			color: #0085CA;
			font-size: 24px;
			margin: 0 0 30px;
			padding: 0;
			text-align: center;
		}

		p {
			margin: 0 0 10px;
		}

		.row {
			display: flex;
			flex-wrap: wrap;
			margin: 0 -10px;
		}

		.col-sm-6 {
			flex-basis: 50%;
			max-width: 50%;
			padding: 0 10px;
		}

		ul {
			list-style: none;
			margin: 0;
			padding: 0;
		}

			ul li {
				margin-bottom: 5px;
			}

		button {
			background-color: #0085CA;
			border: none;
			border-radius: 3px;
			color: #fff;
			cursor: pointer;
			font-size: 14px;
			padding: 10px 15px;
			margin: 20px auto 0;
			display: block;
		}

			button:hover {
				background-color: #005F8B;
			}
	</style>
</head>
<body>
	<div class="container">
		<h1>PNR Status</h1>
		@if (Model == null)
		{
			<p>No booking found.</p>
		}
		else
		{
			<div class="row">
				<div class="col-sm-6">
					<p><strong>PNR:</strong> @Model.PNR</p>
					<p><strong>Train:</strong> @Model.TrainName (@Model.TrainId)</p>
					<p><strong>Route:</strong> @Model.Origin to @Model.Destination</p>
					<p><strong>Departure:</strong> @Model.Departure</p>
					<p><strong>Arrival:</strong> @Model.Arrival</p>
				</div>
				<div class="col-sm-6">
					<p><strong>Passenger Details:</strong></p>
					<ul>
						@foreach (var item in Model.PassengerDetails)
						{
							<li>@item.Name, @item.Age, @item.Gender</li>
						}
					</ul>
					<p><strong>Ticket Count:</strong> @Model.TicketCount</p>
					<p><strong>Booking Date:</strong> @Model.BookingDate.ToShortDateString()</p>
				</div>
			</div>
			<button type="button" onclick="window.print()">Print Ticket</button>
		}
	</div>
</body>
</html>
