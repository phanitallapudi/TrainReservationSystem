@model TrainReservationSystem.Models.TrainDetails

@{
ViewData["Title"] = "Delete Train Information";
}

<h1>Delete Train Information</h1>
<p>Are you sure you want to delete this train's information?</p>
<div>
    <h4>Train Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TrainName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TrainName)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TrainId)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TrainId)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Origin)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Origin)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Destination)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Destination)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Departure)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Departure)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Arrival)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Arrival)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SeatCapacity)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.SeatCapacity)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SeatRate)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.SeatRate)</dd>
    </dl>

    <form asp-action="InfoDelete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div> 
<style>
    h4 {
        margin-top: 2rem;
    }

    hr {
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
        border: 0;
        border-top: 1px solid rgba(0, 0, 0, 0.1);
    }

    .row {
        margin-top: 1.5rem;
        margin-bottom: 1.5rem;
    }
</style> 