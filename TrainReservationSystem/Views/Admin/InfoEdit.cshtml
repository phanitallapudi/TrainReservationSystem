@model TrainReservationSystem.Models.TrainDetails

@{
    ViewData["Title"] = "Edit Train Details";
}

<div class="container-fluid">
    <h1 class="my-4">Edit Train Details</h1>
    <hr class="mb-4" />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="InfoEdit">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="TrainName" class="control-label">Train Name</label>
                    <input asp-for="TrainName" class="form-control" />
                    <span asp-validation-for="TrainName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TrainId" class="control-label">Train ID</label>
                    <input asp-for="TrainId" class="form-control" />
                    <span asp-validation-for="TrainId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Origin" class="control-label">Origin</label>
                    <input asp-for="Origin" class="form-control" />
                    <span asp-validation-for="Origin" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Destination" class="control-label">Destination</label>
                    <input asp-for="Destination" class="form-control" />
                    <span asp-validation-for="Destination" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Departure" class="control-label">Departure</label>
                    <input asp-for="Departure" class="form-control" />
                    <span asp-validation-for="Departure" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Arrival" class="control-label">Arrival</label>
                    <input asp-for="Arrival" class="form-control" />
                    <span asp-validation-for="Arrival" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SeatCapacity" class="control-label">Seat Capacity</label>
                    <input asp-for="SeatCapacity" class="form-control" />
                    <span asp-validation-for="SeatCapacity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SeatRate" class="control-label">Seat Rate</label>
                    <input asp-for="SeatRate" class="form-control" />
                    <span asp-validation-for="SeatRate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}